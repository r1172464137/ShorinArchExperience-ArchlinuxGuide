{
"workbench.colorCustomizations": {
    "foreground": "{{colors.on_surface.dark.hex}}",
    "editor.background": "{{colors.background.dark.hex}}",
    "editor.foreground": "{{colors.on_surface.dark.hex}}",
    "editorCursor.foreground": "{{colors.primary.dark.hex}}",
    "editorLineNumber.foreground": "{{colors.outline.dark.hex}}",
    "editorLineNumber.activeForeground": "{{colors.primary.dark.hex}}",
    
    "selection.background": "{{colors.primary.dark.hex}}40",
    "editor.selectionBackground": "{{colors.primary.dark.hex}}40",
    "editor.inactiveSelectionBackground": "{{colors.primary.dark.hex}}15",
    "editor.lineHighlightBackground": "{{colors.surface_container.dark.hex}}",
    "editor.wordHighlightBackground": "{{colors.secondary.dark.hex}}33",
    "editor.wordHighlightStrongBackground": "{{colors.tertiary.dark.hex}}33",
    "editorBracketMatch.background": "{{colors.surface_container_high.dark.hex}}",
    "editorBracketMatch.border": "{{colors.outline.dark.hex}}",
    
    "activityBar.background": "{{colors.surface_container.dark.hex}}",
    "activityBar.foreground": "{{colors.primary.dark.hex}}",
    "activityBar.activeBorder": "{{colors.primary.dark.hex}}",
    "activityBar.inactiveForeground": "{{colors.outline.dark.hex}}",
    
    "activityBarBadge.background": "{{colors.tertiary.dark.hex}}",
    "activityBarBadge.foreground": "{{colors.on_tertiary.dark.hex}}",
    
    "button.background": "{{colors.tertiary.dark.hex}}",
    "button.foreground": "{{colors.on_tertiary.dark.hex}}",
    "button.hoverBackground": "{{colors.tertiary.dark.hex}}CC",
    "button.secondaryBackground": "{{colors.surface_container_high.dark.hex}}",
    "button.secondaryForeground": "{{colors.on_surface.dark.hex}}",
    
    "sideBar.background": "{{colors.surface_container_low.dark.hex}}",
    "sideBar.border": "{{colors.outline_variant.dark.hex}}",
    "sideBarSectionHeader.background": "{{colors.surface_container.dark.hex}}",
    "sideBarTitle.foreground": "{{colors.primary.dark.hex}}",
    
    "tab.activeBackground": "{{colors.background.dark.hex}}",
    "tab.inactiveBackground": "{{colors.surface_container_low.dark.hex}}",
    "tab.activeForeground": "{{colors.primary.dark.hex}}",
    "tab.activeBorderTop": "{{colors.primary.dark.hex}}",
    "tab.border": "{{colors.outline_variant.dark.hex}}",
    
    "statusBar.background": "{{colors.surface_container.dark.hex}}",
    "statusBar.foreground": "{{colors.on_surface.dark.hex}}",
    "statusBar.border": "{{colors.outline_variant.dark.hex}}",
    "statusBar.debuggingBackground": "{{colors.error.dark.hex}}",
    
    "titleBar.activeBackground": "{{colors.surface_container_low.dark.hex}}",
    "titleBar.activeForeground": "{{colors.on_surface.dark.hex}}",
    "titleBar.border": "{{colors.outline_variant.dark.hex}}",
    
    "input.background": "{{colors.surface_container.dark.hex}}",
    "input.border": "{{colors.outline.dark.hex}}",
    "input.placeholderForeground": "{{colors.outline.dark.hex}}",
    
    "list.activeSelectionBackground": "{{colors.primary.dark.hex}}33",
    "list.activeSelectionForeground": "{{colors.primary.dark.hex}}",
    "list.hoverBackground": "{{colors.on_surface.dark.hex}}10",
    "list.highlightForeground": "{{colors.tertiary.dark.hex}}",
    
    "terminal.background": "{{colors.background.dark.hex}}",
    "terminal.foreground": "{{colors.on_surface.dark.hex}}",
    "terminal.ansiBlack": "{{colors.surface_container_high.dark.hex}}",
    "terminal.ansiRed": "{{colors.error.dark.hex}}",
    "terminal.ansiGreen": "{{colors.primary.dark.hex}}",
    "terminal.ansiYellow": "{{colors.tertiary.dark.hex}}",
    "terminal.ansiBlue": "{{colors.secondary.dark.hex}}",
    "terminal.ansiMagenta": "{{colors.tertiary_container.dark.hex}}",
    "terminal.ansiCyan": "{{colors.secondary_container.dark.hex}}",
    "terminal.ansiWhite": "{{colors.on_surface.dark.hex}}"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": { 
          "foreground": "{{colors.outline.dark.hex}}", 
          "fontStyle": "italic" 
        }
      },
      {
        "scope": [
          "punctuation", 
          "meta.brace", 
          "meta.delimiter", 
          "punctuation.separator",
          "punctuation.terminator"
        ],
        "settings": { 
          "foreground": "{{colors.on_surface_variant.dark.hex}}" 
        }
      },
      {
        "scope": [
            "keyword.operator",
            "keyword.operator.logical", 
            "keyword.operator.assignment",
            "keyword.operator.arithmetic",
            "keyword.operator.bitwise",
            "keyword.operator.relational",
            "storage.type.function.arrow"
        ],
        "settings": {
            "foreground": "{{colors.tertiary.dark.hex}}",
            "fontStyle": "bold"
        }
      },
      {
        "scope": ["string", "string.quoted", "string.template", "punctuation.definition.string"],
        "settings": { "foreground": "{{colors.secondary.dark.hex}}" }
      },
      {
        "scope": ["keyword", "storage", "storage.type", "entity.name.tag"],
        "settings": { "foreground": "{{colors.primary.dark.hex}}", "fontStyle": "bold" }
      },
      {
        "scope": ["variable", "variable.language", "variable.name", "variable.other", "support.variable"],
        "settings": { "foreground": "{{colors.tertiary.dark.hex}}" }
      },
      {
        "scope": ["variable.other.property", "meta.object-literal.key"],
        "settings": { "foreground": "{{colors.on_surface.dark.hex}}" }
      },
      {
        "scope": ["variable.parameter"],
        "settings": { "foreground": "{{colors.error.dark.hex}}", "fontStyle": "underline" }
      },
      {
        "scope": ["entity.name.function", "support.function"],
        "settings": { "foreground": "{{colors.primary.dark.hex}}", "fontStyle": "bold" }
      },
      {
        "scope": ["entity.name.type", "entity.name.class", "support.class", "support.type"],
        "settings": { "foreground": "{{colors.secondary.dark.hex}}", "fontStyle": "bold" }
      },
      {
        "scope": ["constant", "constant.numeric", "support.constant"],
        "settings": { "foreground": "{{colors.error.dark.hex}}" }
      },
      {
        "scope": ["markup.heading"],
        "settings": { "foreground": "{{colors.primary.dark.hex}}", "fontStyle": "bold" }
      },
      {
        "scope": ["source.shell punctuation.definition.string"],
        "settings": { "foreground": "{{colors.secondary.dark.hex}}" }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true,
    "rules": {
      "variable": { "foreground": "{{colors.tertiary.dark.hex}}", "fontStyle": "" },
      "variable.readonly": { "foreground": "{{colors.error.dark.hex}}", "fontStyle": "bold" },
      "property": { "foreground": "{{colors.on_surface.dark.hex}}" },
      "parameter": { "foreground": "{{colors.error.dark.hex}}" },
      "function": { "foreground": "{{colors.primary.dark.hex}}", "fontStyle": "bold" },
      "keyword": { "foreground": "{{colors.primary.dark.hex}}" },
      "string": { "foreground": "{{colors.secondary.dark.hex}}" },
      "number": { "foreground": "{{colors.error.dark.hex}}" },
      "comment": { "foreground": "{{colors.outline.dark.hex}}", "fontStyle": "italic" },
      "operator": { "foreground": "{{colors.tertiary.dark.hex}}", "fontStyle": "bold" },
      "punctuation": { "foreground": "{{colors.on_surface_variant.dark.hex}}" },
      "class": { "foreground": "{{colors.secondary.dark.hex}}", "fontStyle": "bold" },
      "type": { "foreground": "{{colors.secondary.dark.hex}}" }
    }
  }
}
