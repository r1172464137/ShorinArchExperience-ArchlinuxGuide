    "terminal.background": "{{colors.background.default.hex}}",
    "terminal.foreground": "{{colors.on_surface.default.hex}}"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": { 
          "foreground": "{{colors.outline.default.hex}}",
          "fontStyle": "italic" 
        }
      },
      {
        "scope": [
            "variable", 
            "variable.language", 
            "variable.name", 
            "variable.other", 
            "variable.parameter"
        ],
        "settings": { 
            "foreground": "{{colors.primary.default.hex}}" 
        }
      },
      {
        "scope": [
            "entity.name.function", 
            "support.function",
            "meta.function-call",
            "meta.function-call.shell variable.function"
        ],
        "settings": { 
            "foreground": "{{colors.secondary.default.hex}}",
            "fontStyle": "bold"
        }
      }
    ]
  }
}
